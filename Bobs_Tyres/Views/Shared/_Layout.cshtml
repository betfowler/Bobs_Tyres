<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="http://bethanyfowler-001-site2.btempurl.com/Content/Images/logoTyre.png">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Kalam" rel="stylesheet">
    <script src='https://www.google.com/recaptcha/api.js?onload=myCallBack&render=explicit' async defer></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navtop">
            <div class="row" id="navtopContainer">
                <div class="col-lg-5 col-md-4 col-sm-5" id="logoImage">
                    <a href="@Url.Action("Index", "Home")"><img src="~/Content/Images/logo.jpg" /></a>
                </div>
                <div class="col-lg-7 col-md-8 col-sm-7">
                    <div class="row" id="contactInfomationGroup">
                        <div class="col-md-4">
                            <div class="row" id="contactBanner">
                                <div class="col-md-12">
                                    <div class="row" id="bannerTitle">
                                        Give Us A Call On
                                    </div>
                                    <div class="row" id="contactNumber">
                                        <i class="fa fa-phone" aria-hidden="true"></i> 01460 72037
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4" id="locationBanner">
                            Bobs Tyres Ltd,<br />
                            Blacknell Lane Trading Estate,<br />
                            Crewkerne, Somerset, TA18 7HE
                        </div>
                        <div class="col-md-4">
                            <div class="row" id="openingHrs">
                                <div class="row" id="bannerTitle">
                                    Our Opening Hours
                                </div>
                                <div class="row">
                                    Monday - Friday <b>08.30</b> - <b>17.30</b>
                                    Saturday <b>08.30 - 12.00</b>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="navbar-header">
                <p class="navbar-text visible-xs-inline-block" id="smlLogo">
                    &nbsp; <a href="@Url.Action("Index", "Home")"><img src="~/Content/Images/logo.jpg" /></a>
                </p>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Services &#9662;
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Servicing", "Servicing", "Services")</li>
                            <li>@Html.ActionLink("Batteries", "Batteries", "Services")</li>
                            <li>@Html.ActionLink("Repairs", "Repairs", "Services")</li>
                            <li>@Html.ActionLink("MOT's", "MOTs", "Services")</li>
                            <li>@Html.ActionLink("Tyres", "Tyres", "Services")</li>
                            <li>@Html.ActionLink("Kumho Tyres", "Kumho_Tyres", "Services")</li>
                            <li>@Html.ActionLink("Exhausts", "Exhausts", "Services")</li>
                            <li>@Html.ActionLink("Tow Bars", "Tow_Bars", "Services")</li>
                        </ul>
                    </li>
                    <li><a href="http://www.crewkernetyres.co.uk">Online Tyres</a></li>
                    <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                &copy; @DateTime.Now.Year - Bobs Tyres Ltd and Garage Services
                <span style="float: right"><a href="@Url.Action("Index","Accounts")" style="font-size: 10px;">Manage My Site <i class="fa fa-pencil-square-o" aria-hidden="true"></i> &nbsp; </a> Web design by Bethany Fowler</span>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
